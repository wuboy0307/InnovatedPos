            android:id="@+id/group3Radio4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:text="@string/num4" />

        <RadioButton
            android:id="@+id/group3Radio5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:text="@string/num5" />

        <RadioButton
            android:id="@+id/group3Radio6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:text="@string/num6" />

        <RadioButton
            android:id="@+id/group3Radio7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:text="@string/num7" />

        <RadioButton
            android:id="@+id/group3Radio8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:text="@string/num8" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignTop="@+id/textView3"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/radioGroup3"
        android:labelFor="@+id/editText3"
        android:text="@string/dollar"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/subTotal3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/radioGroup3"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:text="@string/zero"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <!-- Linear Layout (3) for 小点  END -->

    <include layout="@layout/dimsum_special" />

    <include layout="@layout/dimsum_top" />

    <include layout="@layout/dimsum_super" />

    <Button
        android:id="@+id/newOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="57dp"
        android:text="@string/newOrder" />

    <Button
        android:id="@+id/printOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/newOrder"
        android:layout_marginLeft="33dp"
        android:layout_toRightOf="@+id/newOrder"
        android:text="@string/done" />

    <TextView
        android:id="@+id/grandTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:background="#FFFF00"
        android:labelFor="@+id/editText6"
        android:text="@string/zero"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/printOrder"
        android:layout_alignRight="@+id/radioGroup3"
        android:layout_marginRight="53dp"
        android:text="@string/total"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    
